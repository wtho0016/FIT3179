{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "GDP by Country",
  "width": 800,
  "height": 450,
  "projection": {"type": "equalEarth"},

  "params": [
    {
      "name": "year_select",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2008,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },

  "transform": [
    {
      "lookup": "properties.ISO_N3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/wtho0016/FIT3179/refs/heads/main/DV2/Data/GDP.csv",
          "format": {"type": "csv"}
        },
        "key": "GeoCodeStr",
        "fields": ["Value", "TimePeriod"]
      }
    },
    {
      "joinaggregate": [{
        "op": "count",
        "field": "TimePeriod", 
        "as": "year_count"
      }],
      "groupby": ["properties.ISO_N3", "TimePeriod"]
    },
    {
      "filter": "datum.TimePeriod == year_select && datum.year_count > 0"
    }
  ],
  
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Value",
      "type": "quantitative",
      "scale": {"type": "sqrt"},
      "title": "GDP"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Value", "type": "quantitative"},
      {"field": "TimePeriod", "type": "quantitative"}
    ]
  }
}